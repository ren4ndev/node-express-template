{
  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"]
    }
  }
}
